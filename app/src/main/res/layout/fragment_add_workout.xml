<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".AddWorkoutFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:spacing="16dp">

        <!-- Workout Type -->
        <TextView
            android:text="Workout Type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/editWorkoutType"
            android:hint="e.g., Running"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Duration -->
        <TextView
            android:text="Duration (minutes)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/editDuration"
            android:inputType="number"
            android:hint="e.g., 30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Calories -->
        <TextView
            android:text="Calories Burned"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/editCalories"
            android:inputType="number"
            android:hint="e.g., 300"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Date -->
        <TextView
            android:text="Date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/editDate"
            android:hint="e.g., 2025-05-19"
            android:inputType="date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSaveWorkout"
            android:text="Save Workout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp" />
    </LinearLayout>
</ScrollView>
